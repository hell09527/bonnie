<!--pages/order/protocol/protocol.wxml-->
<scroll-view>
<block wx:for='{{carry_datas}}'  wx:for-item='xo'  wx:key='index'>
<view class='overall' wx:if='{{is_now==1}}'>
<view class='o_left' >
<view >申请原因：{{xo.refund_reason}}</view>
<view style='margin: 16rpx 0; '>{{xo.askfor_time}}（申请时间）</view>
<view >申请金额：{{xo.refund_require_money}}</view>
<view style='margin: 16rpx 0; '>申请数量：x {{xo.refund_require_num}}</view>
<view  wx:if='{{xo.refund_status==1}}'     style='margin: 16rpx 0;'>状态：等待商家退款处理退款申请</view>
<view  wx:if='{{xo.refund_status==2}}'     style='margin: 16rpx 0;'>状态：等待商家退货</view>
<view  wx:if='{{xo.refund_status==3}}'     style='margin: 16rpx 0;'>状态：等待商家收货</view>
<view  wx:if='{{xo.refund_status==4}}'     style='margin: 16rpx 0;'>状态：您的申请已提交成功</view>
<view  wx:if='{{xo.refund_status==5}}'     style='margin: 16rpx 0;'>状态：退款成功</view>
<view  wx:if='{{xo.refund_status==-1}}'     style='margin: 16rpx 0;'>状态：卖家拒绝您的退款申请</view>
<view  wx:if='{{xo.refund_status==-2}}'     style='margin: 16rpx 0;'>状态：退款已关闭</view>
<view  wx:if='{{xo.refund_status==-3}}'     style='margin: 16rpx 0;'>状态：本次退款拒绝</view>
</view>
<view class='o_left'>
<button   catchtap='upspring' data-index='{{index}}'>查看详情</button>
</view>
</view> 
</block>

<block  wx:if='{{is_now==2}}'>
  <view  class='limit'>
  <block > 
       <view class="moban" wx:for='{{Carry}}'  wx:for-item='so'  wx:key='index'>
         <view >{{so.action_username!='admin'?Pro.name:'Bonnie&Clyde'}}</view>
         <view class="head_text" style="color:#999">{{so.action_time}}</view>
         <view class='oneT'> 
             {{so.action}} 
             <view style='display: inline-block;' wx:if='{{so.refund_shipping_company}}'> 物流公司：{{so.refund_shipping_company}} 物流单号：{{so.carry_data.refund_shipping_code}}</view>
         </view>

       </view>
   <!-- <view class="head_text">{{member_info.member_name}}</view>
    <view class="head_text">买家退货</view>
      <view class="head_text">{{xie_name}} x {{hot.refund_require_num}}</view>
     <view class="head_text">快递</view>
      <view class="head_text">物流公司：{{hot.refund_shipping_company}}</view>
     <view class="head_text">物流单号：{{hot.refund_shipping_code}}</view> -->
 </block>
   </view>

</block>
</scroll-view>
