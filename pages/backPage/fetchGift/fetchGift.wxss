/* 新用户登录弹出框样式 */
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.7;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}
.modal-dialog {
  width: 80%;
  overflow: hidden;
  position: fixed;
  top:30%;
  left: 0;
  right: 0;
  z-index: 9999;
  background: #f9f9f9;
  margin: auto;
  border-radius: 10rpx;
}
.modal-title {
  padding-top: 20rpx;
  font-size: 36rpx;
  color: #030303;
  text-align: center;
}

.modal-title-desc{
  font-size:24rpx;
  color:gray;
}

.modal-content {
  padding: 50rpx 32rpx;
  border-top:1rpx solid #DDDDDD;
  border-bottom:1rpx solid #DDDDDD;
}

.modal-content .flex-wrp .flex-item{
  margin-bottom:10rpx;
}
.modal-input {
  display: flex;
  background: #fff;
  border: 2rpx solid #ddd;
  border-radius: 4rpx;
  font-size: 28rpx;
}


.input {
  width: 100%;
