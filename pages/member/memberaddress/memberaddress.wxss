scroll-view{
  font-size: 14px;
}
.side-nav.address{
  margin: 0px 0 0 0;
  overflow: hidden;
  -webkit-user-select: none;
  -moz-user-select: none;
  user-select: none;
  background: #eee;
  padding: 0;
}

.address.side-nav .li{
  clear: both;
  overflow: hidden;
  margin: 0;
  border-bottom: 1px solid #e9e9e9;
  margin-bottom: 5px;
  background: #fff;
  padding: 0;
  margin-top: 10px;
}

.address.side-nav .last-li{
  margin-bottom:0;
}

.address.side-nav .last-child{
  border-bottom: 0;
  padding: 5px;
  display: block; 
  color: #333;
  overflow: hidden;
}

.address.side-nav .li .color-border{
  width: 100%;
  height: 2px;
}

.address.side-nav .li .div-simply{
  display: inline-block;
  width: 100%;
  padding: 5px;
  border-bottom: 1px solid #e2e2e2;
}

.address .payStatus{
  float: left;
}

.right{
  float: right !important;
}

.address.side-nav .li .div-simply .child-div{
  display: block;
  float: right;
  margin-right:5px;
}

.address.side-nav .li .div-simply .a{
  display: block;
  float: right;
  color: #333;
  overflow: hidden;
}

