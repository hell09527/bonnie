<scroll-view wx:if='{{isKol==2}}'>
  <view class='article'>
    <view class="pay-block">
			<image src='https://static.bonnieclyde.cn/W56.png' mode='widthFix'/>
		</view>
        <view class='p' >{{kolText}}</view>
       <button catchtap='toIndex' >返回首页</button>
  </view>
</scroll-view>

<scroll-view  wx:if='{{isKol==1}}'>
  <view wx:for="{{shop}}" wx:for-item='item' wx:for-index='index'>
      <image class="" src="{{item.src}}" mode="widthFix"  style='width:750rpx;'/>
  </view>
  <view style='width:100%;height:100px;' > </view>
    
 

<view class="local" >
    <block wx:if='{{unregistered==1}}' >
       <button class='but' catchtap='Crossdetails' >立即赚钱</button>
    </block>
     <block wx:if='{{unregistered==0 }}' >
         <button class='but' catchtap='toApply' >立即赚钱</button>
    </block>
</view>
</scroll-view>
