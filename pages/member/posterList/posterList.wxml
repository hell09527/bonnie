</view>
</view>
<!-- //大图片 -->
<view class="mimi" wx:if="{{hovers}}" catchtap='popupClose'></view>
<view   class="blocks" wx:if="{{hovers}}">
<scroll-view style="height:{{windowHeight}}px;">
 <image src='{{Imgs}}' mode='widthFix' style="width:100%;"></image>

  <view class="contain"> 
  <view class="inline" catchtap='delImgs'>删除图片</view>
  <view class="inline" catchtap='Savelocal'>下载到相册</view>
