<!--pages/member/posterList/posterList.wxml-->
<scroll-view class="therefore">
<!-- //海报列表渲染 -->
  <view>
      <view class='body'>
        <!-- <view class='goods-title'>NB</view> -->
        <block wx:for='{{category_goods}}' wx:key='' wx:for-item='shops' wx:for-index='index'>
          <view class='goods_all' hover-class="good_over" catchtap='listClick' data-index='{{index}}' >
            <view class="all-box">
              <image src='{{shops.pic_cover_small}}' mode='widthFix' lazy-load='true'></image>
</view>
          </view>
        </block>
      </view>
  </view>

