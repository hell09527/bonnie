/* pages/member/posterList/posterList.wxss */
.therefore{
  padding-bottom: 50px;
}
.fixaction{
 position:fixed;
left:0;
right:0;
bottom:0;
height:50px;
background:#000;
z-index:5;
padding:0;
box-shadow:1px 0 10px 1px #DDD;
justify-content:space-between;
}

.add{
 text-align: center;
 color:#fff;
line-height:50px;
font-size:15px;
font-weight:500;

}

.goods_all{
  width:50%;
  float: left;
  box-sizing: border-box;
}
.goods_all:nth-child(2n)>.all-box{
  margin:0 20rpx 20rpx 10rpx;
}
.all-box{
  margin:0 10rpx 20rpx 20rpx;
  background: #fff;
  box-sizing: border-box;
}
.all-box>image{
  width:100%;
  display: block;
}
.shop-detail{
  padding:10px;
}
.title{
  font-size: 12px;
  line-height: 18px;
  height:36px;
  display: -webkit-box; 
-webkit-line-clamp: 2; 
-webkit-box-orient: vertical; 
overflow: hidden;
}

.shop-detail-price{
  display: flex;
  justify-content: flex-start;
  padding:10rpx 0 0;
  align-items: center;
}
.shop-detail-price>text{
  color:#000;
  margin-right: 10px;
  font-weight:700;
}
.i.goods_tab {
  font-style: normal;
  font-size: 12px !important;
  background: #333;
  color: #fff !important;
  padding: 1px 3px;
  margin-right: 2px;
  border-radius: 2px;
  font-weight: normal !important;
}
.good_over{
   width:50%;
  border-radius: 50%;
}
.green {
  background: green !important;
}
.mimi{
  position: fixed;
  top:0;
  left:0;
  bottom: 0;
  right: 0;
   /* background: rgba(0, 0, 0, .6); */
   background: #000;
   z-index: 3;
}
.blocks{
   position: fixed;
   width: 100%;
    background: #000;
   /* background: rgba(0, 0, 0, .6); */
   z-index: 4;
}
.contain{
  margin-top: 40rpx;
width: 100%;
}
.inline{
  float:left;
  height:90rpx;
  line-height: 90rpx;
  text-align: center;
  color: #fff;
  width: 33.3%;
}